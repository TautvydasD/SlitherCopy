@if (isMainMenu == true)
{
    <div style="width: 700px; margin-left: auto; margin-right: auto; ">
        <div style="position: absolute; top: 50%; left: 50%;">
            <div style="margin:5px">
                <button style="height:50px;width:130px" class="btn btn-primary" @onclick="SinglePlayer">Single Player</button>
            </div>
            <div style="margin:5px">
                <button style="height:50px;width:130px" class="btn btn-primary" @onclick="Multiplayer">Multiplayer</button>
            </div>
            <div style="margin:5px">
                <button style="height:50px;width:130px" class="btn btn-primary">Options</button>
            </div>
        </div>
    </div>


}

@if (isSinglePlayer == true)
{
    <Map></Map>
}
@if (isMultiplayer)
{
    <Lobby></Lobby>
}
@code {


    public bool isSinglePlayer { get; set; } = false;
    public bool isMainMenu { get; set; } = true;
    public bool isMultiplayer { get; set; } = false;

    private void SinglePlayer()
    {
        isSinglePlayer = true;
        isMainMenu = false;

    }

    private void Multiplayer()
    {
        isMainMenu = false;
        isMultiplayer = true;
    }
}